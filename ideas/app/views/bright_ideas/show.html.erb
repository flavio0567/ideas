<h4><%= @post.user.name  %> says: <%=  @post.content %>  </h4>


<h3>People who liked this post:</h3>

<table class="table table-striped table-hover ">

	<tr>
	  <th><p>Alias</p></th>
	  <th><p>Name</p></th>
	</tr>
	    
    <% @user.each do |user| %>
		<tr>
	      <td class="col-md-1"><a href="/users/<%= user.id %>"><%= user.alias  %></a></td>
	      <td><%= user.name  %>
	    </tr>
    <% end %>
</table>

<%= link_to "Bright Ideas", bright_ideas_path %>